        [span_45](start_span){q: "While pre-landing, what colour of seal for DFS carts?[span_45](end_span)", opts: ["(A) Red", "(B) WHITE", "(C) Yellow", "(D) Blue"], ans: "B"}
    ];

    let current = 0;

    function render() {
        const item = quizData[current];
        document.getElementById('progress').innerText = `Question ${current + 1} of ${quizData.length}`;
        document.getElementById('q-text').innerText = item.q;
        const optsDiv = document.getElementById('options');
        optsDiv.innerHTML = '';
        item.opts.forEach(opt => {
            const div = document.createElement('div');
            div.className = 'option';
            div.innerText = opt;
            div.onclick = () => check(div, opt, item.ans);
            optsDiv.appendChild(div);
        });
        document.getElementById('prev').disabled = current === 0;
        document.getElementById('next').innerText = current === quizData.length - 1 ? "完成" : "下一題";
    }

    function check(el, val, correctLetter) {
        const selected = val.match(/\(([A-D])\)/)[1];
        if (selected === correctLetter) {
            el.classList.add('correct');
        } else {
            el.classList.add('wrong');
            Array.from(document.getElementsByClassName('option')).forEach(optEl => {
                if (optEl.innerText.includes(`(${correctLetter})`)) optEl.classList.add('correct');
            });
        }
        Array.from(document.getElementsByClassName('option')).forEach(o => o.style.pointerEvents = 'none');
    }

    function changeQ(step) {
        if (current + step >= 0 && current + step < quizData.length) {
            current += step;
            render();
        } else if (current + step === quizData.length) {
            alert("恭喜完成所有練習！祝你 Check 順利！");
        }
    }

    render();
</script>
