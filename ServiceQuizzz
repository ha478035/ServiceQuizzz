        {q: "VISA card max amount without authorization:", opts: ["(A) NTD 30,000", "(B) USD 1,000", "(C) NTD 20,000", "(D) No limit"], ans: "A"},
        {q: "When does CC spray cabin fragrance?", opts: ["(A) Boarding", "(B) After Security check", "(C) Takeoff", "(D) Landing"], ans: "B"},
        {q: "Keep cart no more than ___ rows from you.", opts: ["(A) 2", "(B) 3", "(C) 4", "(D) 5"], ans: "B"},
        {q: "Which category of waste needs to be recycled?", opts: ["(A) PM", "(B) Food", "(C) Tissue", "(D) Glass"], ans: "A"},
        {q: "Which meal type does NOT belong to Main meal?", opts: ["(A) Breakfast", "(B) Lunch", "(C) Dinner", "(D) Supper"], ans: "D"},
        {q: "Which is NOT the duties of CC in charge during Pre-landing?", opts: ["(A) Turn OFF cabin light", "(B) Empty ovens", "(C) Stow carts", "(D) Lock bars"], ans: "A"},
        {q: "Which SPML does NOT belong to Religious Based Meal?", opts: ["(A) HNML", "(B) KSML", "(C) MOML", "(D) DBML"], ans: "D"},
        {q: "While pre-landing, what colour of seal for DFS carts?", opts: ["(A) Red", "(B) WHITE", "(C) Yellow", "(D) Blue"], ans: "B"}
    ];

    let current = 0;

    function render() {
        const item = quizData[current];
        document.getElementById('progress').innerText = `題號: ${current + 1} / ${quizData.length}`;
        document.getElementById('q-text').innerText = item.q;
        const optsDiv = document.getElementById('options');
        optsDiv.innerHTML = '';
        item.opts.forEach(opt => {
            const div = document.createElement('div');
            div.className = 'option';
            div.innerText = opt;
            div.onclick = () => check(div, opt, item.ans);
            optsDiv.appendChild(div);
        });
        document.getElementById('prev').disabled = current === 0;
    }

    function check(el, val, correctLetter) {
        const selected = val.charAt(1); 
        if (selected === correctLetter) {
            el.classList.add('correct');
        } else {
            el.classList.add('wrong');
            // 顯示正確答案
            Array.from(document.getElementsByClassName('option')).forEach(optEl => {
                if (optEl.innerText.charAt(1) === correctLetter) optEl.classList.add('correct');
            });
        }
        // 禁止重複點擊
        Array.from(document.getElementsByClassName('option')).forEach(o => o.style.pointerEvents = 'none');
    }

    function changeQ(step) {
        current += step;
        if (current < 0) current = 0;
        if (current >= quizData.length) current = quizData.length - 1;
        render();
    }

    render();
</script>
